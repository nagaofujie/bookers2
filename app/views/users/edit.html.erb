<p id="notice"></p>
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <% if @user.errors.any? %>
            <%= @user.errors.count %>error occurred
            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
              </ul>
            <% end %>

                <h2>User info</h2>

                <%= form_with model: @user do |f| %>


                <div><label for="inputName">Name</label></div>
                <div><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%></div>
                <div><label for="inputImage">Image</label></div>


                <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>

                <h4>Introduction</h4>
                <%= f.text_area :introduction %>

                <div><%= f.submit"Update User" , class:"btn btn-success" %></div>

                <% end %>
        </div>
    </div>
</div>





