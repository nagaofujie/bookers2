<p id="notice"></p>
<div class="container">
    <div class="row">
      <%= render 'books/errors.html.erb',book: @book %>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

        <h1>Editing Book</h1>
            <%= form_with model: @book do |f| %>

            <h4>Title</h4>
            <%= f.text_field :title %>

            <h4>Opinion</h4>
            <%= f.text_area :body %>

            <div><%= f.submit 'Update Book',class:"btn btn-success" %></div>
            <div>
            <%=link_to "Show",book_path(@book.id) %>|<%= link_to"Back",books_path %>
            </div>
            <% end %>
          </div>
         </div>
        </div>
